---
import site from "@/data/site.json";
import Head from "@/components/Head.astro";
import Footer from "@/components/Footer.astro";
import Links from "@/components/Links.astro";
import PostHog from "@/components/PostHog.astro";
const { content } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <link href="https://use.typekit.net/urt2yyq.css" rel="stylesheet" />
    <Head {site} {content} />
  </head>
  <body class="latte bg-base dark:mocha">
    <div class="my-12 px-4 md:container md:mx-auto">
      <div class="xl:flex xl:gap-12">
        <div class="xl:order-1 xl:flex-1">
          <main
            class="prose prose-xl font-kabel font-light text-text prose-headings:font-kabel prose-headings:font-black prose-headings:italic prose-headings:text-text prose-a:text-pink prose-a:no-underline hover:prose-a:text-flamingo"
          >
            <slot />
          </main>
          <Links />
        </div>
        <div
          class="flex items-center justify-center xl:order-2 xl:flex-1 xl:items-start"
        >
          <div class="mt-12 w-full xl:mt-0">
            <img
              src="/images/james.webp"
              alt="James McEwan"
              class="rounded-3xl xl:max-w-md"
            />
          </div>
        </div>
      </div>
      <Footer author={site.author} />
    </div>
    <PostHog />
  </body>
</html>

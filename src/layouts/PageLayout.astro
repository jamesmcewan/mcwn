---
import { getCollection } from 'astro:content'
import site from '@/data/site'
import Head from '@/components/Head.astro'
import Footer from '@/components/Footer.astro'
import Links from '@/components/Links.astro'
import MightyDinosaur from '@/components/mighty-dinosaur.astro'
import Category from '../components/category.astro'
import '../styles/global.css'

const { content } = Astro.props
const posts = (
  await getCollection('posts', ({ data }) => {
    return data.draft !== true
  })
).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rethink+Sans:ital,wght@0,400..800;1,400..800&display=swap"
      rel="stylesheet"
    />
    <link href="/css/fontawesome.min.css" rel="stylesheet" />
    <link href="/css/brands.min.css" rel="stylesheet" />
    <Head {site} {content} />
  </head>
  <body class="bg-tn-crust">
    <div class="my-12 px-4 md:container md:mx-auto">
      <div class="lg:flex lg:gap-12">
        <div class="lg:flex-1 xl:order-1">
          <main
            class="prose prose-lg font-rethink text-tn-text prose-headings:font-rethink prose-headings:font-extrabold prose-headings:italic prose-headings:text-tn-text prose-a:text-tn-pink prose-a:no-underline prose-a:hover:text-tn-purple1 font-light"
          >
            <slot />
          </main>
          <Links />
          <div class="">
            <ul class="grid gap-6">
              {
                posts.map((post) => {
                  const { title, category, image, description } = post.data
                  return (
                    <li>
                      <a href={`/post/${post.slug}/`} class="block rounded-3xl">
                        {image && (
                          <img
                            src={image}
                            alt={title}
                            class="mb-2 rounded-3xl"
                          />
                        )}
                        <h2 class="text-md font-cartridgeregular text-tn-green hover:text-tn-teal0 md:text-lg">
                          {category && <Category>{category}:</Category>} {title}
                        </h2>
                        <p class="text-md font-dmsans text-tn-text">
                          {description}
                        </p>
                      </a>
                    </li>
                  )
                })
              }
            </ul>
          </div>
        </div>
        <div
          class="flex items-center justify-center xl:order-2 xl:flex-1 xl:items-start"
        >
          <div class="mt-12 w-full xl:mt-0">
            <img
              src="/images/james.webp"
              alt="James McEwan"
              class="rounded-3xl xl:max-w-md"
            />
            <div class="max-w-md pt-6">
              <MightyDinosaur />
            </div>
          </div>
        </div>
      </div>
      <Footer author={site.author} />
    </div>
  </body>
</html>

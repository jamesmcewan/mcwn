---
import site from "@/data/site.json";
import Head from "@/components/Head.astro";
import Footer from "@/components/Footer.astro";
const { content } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="https://use.typekit.net/urt2yyq.css" rel="stylesheet" />
    <Head {site} {content} />
  </head>
  <body class="latte bg-base dark:macchiato">
    <div class="my-10 px-4 md:container md:mx-auto">
      <div class="xl:flex xl:gap-12">
        <div class="xl:order-1 xl:flex-1">
          <main
            class="prose font-basic font-light text-text md:prose-lg lg:prose-xl prose-headings:font-mixta prose-headings:font-black prose-headings:text-text prose-a:text-pink prose-a:no-underline hover:prose-a:text-flamingo"
          >
            <slot />
          </main>
        </div>
        <div class="flex items-center justify-center xl:order-2 xl:flex-1">
          <div
            class="mt-10 w-28 rounded-full bg-maroon xl:mt-0 xl:w-full xl:max-w-fit"
          >
            <img
              src="/images/mcwn.webp"
              alt="James McEwan"
              class="rounded-3xl xl:max-w-md"
            />
          </div>
        </div>
      </div>
      <Footer author={site.author} />
    </div>
  </body>
</html>

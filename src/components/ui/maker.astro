---
import siteConfig from '@/data/site-config'
import SectionHeading from './section-heading.astro'
import Block from './block.astro'
---

<Block>
  <SectionHeading>Things I've made</SectionHeading>
  <ul class="mt-2 grid grid-cols-3 gap-2">
    {
      siteConfig.maker.map((link) => (
        <li>
          <a
            href={link.url}
            rel="me"
            class="text-md bg-tn-mantle font-rethink text-tn-purple1 hover:text-tn-purple0 block rounded-lg p-6 font-light"
          >
            {link.name}
          </a>
        </li>
      ))
    }
  </ul>
</Block>

---
import site from '@/data/site'
---

<div class="mt-12">
  <ul class="grid gap-2 sm:grid-cols-2">
    {
      site.elsewhere.map((link) => (
        <li>
          <a
            href={link.url}
            rel="me"
            class="text-md bg-tn-mantle font-rethink text-tn-purple1 hover:text-tn-purple0 block rounded-lg p-6 font-light"
          >
            {link.name}
          </a>
        </li>
      ))
    }
    {
      site.social.map((link) => (
        <li>
          <a
            href={link.url}
            class="text-md bg-tn-mantle font-rethink text-tn-purple1 hover:text-tn-purple0 block rounded-lg p-6 font-light"
            rel="me"
          >
            {link.name}
          </a>
        </li>
      ))
    }
  </ul>
</div>

---
import site from "@/data/site.json";
---

<div class="mt-12">
  <ul class="grid grid-cols-2 gap-2">
    {
      site.elsewhere.map((link) => (
        <li>
          <a
            href={link.url}
            rel="me"
            class="text-md block rounded-lg bg-crust p-6 font-rethink font-light text-rosewater hover:bg-mantle hover:text-pink"
          >
            {link.name}
          </a>
        </li>
      ))
    }
    {
      site.social.map((link) => (
        <li>
          <a
            href={link.url}
            class="block rounded-lg bg-crust p-6 font-rethink font-light text-rosewater hover:bg-mantle hover:text-pink md:text-lg"
            rel="me"
          >
            {link.name}
          </a>
        </li>
      ))
    }
  </ul>
</div>

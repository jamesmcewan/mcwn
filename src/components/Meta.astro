---
export interface Props {
  description: string
  themeColor: {
    light: string
    dark: string
  }
}

const { description, themeColor } = Astro.props
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<meta http-equiv="X-UA-Compatible" content="ie=edge" />
<link rel="manif6est" href="/manifest.webmanifest" />
<meta
  name="theme-color"
  content={themeColor.light}
  media="(prefers-color-scheme: light)"
/>
<meta
  name="theme-color"
  content={themeColor.dark}
  media="(prefers-color-scheme: dark)"
/>
<link rel="me" href="https://social.lol/@mcwn" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Rethink+Sans:ital,wght@0,400..800;1,400..800&display=swap"
  rel="stylesheet"
/>
<link rel="stylesheet" href="/css/cartridge.css" as="font" />
<link rel="stylesheet" href="/css/video.css" />
<link href="/css/fontawesome.min.css" rel="stylesheet" />
<link href="/css/brands.min.css" rel="stylesheet" />
<link
  rel="alternate"
  type="application/rss+xml"
  title="Mighty Dinosaur"
  href="/rss.xml"
/>
